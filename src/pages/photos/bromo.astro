---
import MainLayout from "../../layouts/MainLayout.astro";
import ImageSlider from "../../components/Slider";

const images = (await import("../../../public/data/content.json")).default[0]
  .images;
---

<MainLayout>
  <ImageSlider client:load images={images ? images : ""} />
  <section class="mt-4">
    <div class="flex justify-between">
      <div class="flex-1">
        <small class="text-gray-500 block text-xs">Published at</small>
        <p class="text-gray-700 font-medium">April 28, 2023</p>
      </div>
      <div class="flex-1">
        <small class="text-gray-500 block text-xs">Location</small>
        <p class="text-gray-700 font-medium">Bromo, East Java</p>
      </div>
    </div>
    <div class="mt-6 w-full sm:w-3/4">
      <h1 class="font-semibold text-base mb-4">Lorem, ipsum dolor.</h1>
      <p>
        Lorem ipsum dolor sit amet consectetur adipisicing elit. Sunt, eaque
        cupiditate beatae alias explicabo at, deserunt debitis voluptatibus
        laudantium nemo soluta maiores illo. Eligendi, tenetur? Quas aliquid
        adipisci saepe sequi consectetur illo quam ullam! Quod, quidem.
      </p>
    </div>
  </section>
</MainLayout>
